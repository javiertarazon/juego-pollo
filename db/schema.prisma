generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChickenGame {
  id              String      @id @default(cuid())
  boneCount       Int         // 2, 3 or 4 bones
  revealedCount   Int         @default(0) // Number of positions revealed
  hitBone         Boolean     @default(false) // Did player hit a bone?
  cashOutPosition Int?        // Position where player cashed out (1-21)
  multiplier      Float?      // Final multiplier achieved
  isSimulated     Boolean     @default(false) // Was this from simulator or real play?
  createdAt       DateTime    @default(now())
  
  positions       ChickenPosition[]
}

model ChickenPosition {
  id        String       @id @default(cuid())
  gameId    String
  position  Int          // Position 1-25 on 5x5 grid
  isChicken Boolean      // true = chicken (safe), false = bone
  revealed  Boolean      @default(false) // Was this position revealed during game?
  revealOrder Int?       // Order in which position was revealed (1, 2, 3...)
  
  game      ChickenGame  @relation(fields: [gameId], references: [id], onDelete: Cascade)
  
  @@unique([gameId, position])
}

model ChickenPositionStats {
  id           String   @id @default(cuid())
  position     Int      // Position 1-25 on 5x5 grid
  totalGames   Int      @default(0)
  chickenCount Int      @default(0) // Times this position was chicken
  boneCount    Int      @default(0) // Times this position was bone
  winRate      Float    @default(0.0) // chickenCount / totalGames
  isSimulated  Boolean  @default(false) // true = from simulator, false = real games

  @@unique([position, isSimulated])
}

model ChickenPattern {
  id          String   @id @default(cuid())
  pattern     String   // Pattern representation (e.g., "5,12,18")
  boneCount   Int      // 2, 3 or 4 bones
  frequency   Int      @default(1) // How often this pattern occurred
  nextChicken String?  // Most common next chicken position after this pattern
  nextBone    String?  // Most common next bone position after this pattern
  successRate Float    @default(0.0)
  lastSeen    DateTime @default(now())
  
  @@unique([pattern, boneCount])
}